#!/bin/bash

# Builds and deploys the API and associated services described in the CloudFormation template.

if [[ $# -eq 0 ]] ; then
 	echo 'Please pass a stack-name as an argument'
  exit 0
fi

profile=$2;
if [[ -z ${2+x} ]] ; then
  profile='default'
fi

echo "Creating AWS Config file"
node -e 'console.log(JSON.stringify(process.env))' > build.json

echo "Creating /out directory"
mkdir -p out

echo "Compiling API template..."
mustache build.json swagger.yaml > out/swagger.yaml

- echo "Compiling Configuration templates..."
# You will need to manually add further environments in here.
- mustache build.json .noths/.config/staging.json > .noths/.config/staging.json
- mustache build.json .noths/.config/production.json > .noths/.config/production.json

echo "Compiling Cloudformation template"
aws cloudformation package \
  --template-file sam.yaml \
  --s3-bucket noths-product-api --output-template-file ./out/template.yaml

echo "Deploying CloudFormation Stack" $1 
echo "using profile" $profile
aws cloudformation deploy \
  --template-file `pwd`/out/template.yaml \
  --stack-name $1 \
  --capabilities CAPABILITY_IAM \
  --profile $profile

