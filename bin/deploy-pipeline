#!/bin/bash

# This script deploys or redeploys the specified AWS CodePipeline as defined in .noths/pipeline.yml.
aws cloudformation deploy \
  --profile default \
  --region eu-west-1 \
  --template-file .noths/pipeline.yml \
  --stack-name cloudformation-spike \
  --capabilities CAPABILITY_IAM \
  --parameter-overrides GitHubToken=ENV['GITHUB_TOKEN'] Repository=benhawker/cloudformation-spike Branch=master Project=spike Configuration=staging